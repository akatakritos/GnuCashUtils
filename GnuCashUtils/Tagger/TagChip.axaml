<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GnuCashUtils.Tagger"
             x:Name="root"
             x:Class="GnuCashUtils.Tagger.TagChip">
    <Border
        Background="{Binding #root.ChipTag.Name, Converter={x:Static vm:Converters.TagNameToColor}}"
        CornerRadius="10"
        Padding="7 2"
        Margin="2 2">
        <TextBlock
            Text="{Binding #root.ChipTag, Converter={x:Static vm:Converters.TagToDisplayText}}"
            Foreground="White"
            FontSize="11"
            VerticalAlignment="Center" />
    </Border>
</UserControl>
