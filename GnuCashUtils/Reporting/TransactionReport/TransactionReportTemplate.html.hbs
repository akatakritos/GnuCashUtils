<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction Report</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            max-width: 900px;
            margin: 2rem auto;
            padding: 0 1rem;
            color: #333;
            font-size: 14px;
        }
        h1 {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            border-bottom: 2px solid #333;
            padding-bottom: 0.5rem;
        }
        h2 {
            font-size: 1.05rem;
            margin: 2rem 0 0.4rem;
            color: #555;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 0.5rem;
            table-layout: fixed;
        }
        col.date        { width: 115px; }
        col.description { width: auto; }
        col.amount      { width: 115px; }
        col.balance     { width: 155px; }
        th, td {
            padding: 0.35rem 0.6rem;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        th {
            background: #f5f5f5;
            font-weight: 600;
            color: #444;
            white-space: nowrap;
        }
        td.num, th.num {
            text-align: right;
            font-variant-numeric: tabular-nums;
            white-space: nowrap;
        }
        td.date {
            white-space: nowrap;
        }
        tr.subtotal td {
            font-weight: 600;
            background: #f9f9f9;
            border-top: 1px solid #bbb;
        }
        .grand-total-table {
            margin-top: 2rem;
        }
        tr.grand-total td {
            font-weight: 700;
            background: #eef;
            border-top: 2px solid #333;
            font-size: 1.05rem;
        }
        .filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 0.4rem 0.75rem;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            color: #555;
        }
        .filter-item .filter-name {
            font-weight: 600;
            color: #333;
        }
        .chip {
            display: inline-block;
            border-radius: 10px;
            padding: 2px 8px;
            font-size: 11px;
            font-weight: 500;
            color: #fff;
            white-space: nowrap;
        }
    </style>
</head>
<body>
    <h1>Transaction Report</h1>

    {{#if Filters}}
    <div class="filters">
        {{#each Filters}}
        <span class="filter-item">
            <span class="filter-name">{{Name}}:</span>
            {{#if ChipColor}}
            <span class="chip" style="background:{{ChipColor}}">{{Value}}</span>
            {{else}}
            {{Value}}
            {{/if}}
        </span>
        {{/each}}
    </div>
    {{/if}}

    {{#each AccountGroups}}
    <h2>{{Account.FullName}}</h2>
    <table>
        <colgroup>
            <col class="date">
            <col class="description">
            <col class="amount">
            <col class="balance">
        </colgroup>
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th class="num">Amount</th>
                <th class="num">Running Balance</th>
            </tr>
        </thead>
        <tbody>
            {{#each Transactions}}
            <tr>
                <td class="date">{{FormattedDate}}</td>
                <td>{{Description}}</td>
                <td class="num">{{FormattedAmount}}</td>
                <td class="num">{{FormattedRunningBalance}}</td>
            </tr>
            {{/each}}
            <tr class="subtotal">
                <td colspan="2">Subtotal</td>
                <td class="num">{{FormattedTotal}}</td>
                <td></td>
            </tr>
        </tbody>
    </table>
    {{/each}}

    <table class="grand-total-table">
        <colgroup>
            <col class="date">
            <col class="description">
            <col class="amount">
            <col class="balance">
        </colgroup>
        <tbody>
            <tr class="grand-total">
                <td colspan="2">Grand Total</td>
                <td class="num">{{FormattedGrandTotal}}</td>
                <td></td>
            </tr>
        </tbody>
    </table>
</body>
</html>
