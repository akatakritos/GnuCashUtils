<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:home="clr-namespace:GnuCashUtils.Home"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="700"
        x:Class="GnuCashUtils.Home.MainWindow"
        x:DataType="home:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="GnuCashUtils">

    <Design.DataContext>
        <home:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">

        <!-- Top bar: file picker + backup -->
        <Border Grid.Row="0"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Padding="8">
            <DockPanel>
                <Button Content="Open" DockPanel.Dock="Right" Margin="8 0 0 0" Click="Button_OnClick" />
                <Button Content="Backup" DockPanel.Dock="Right" Command="{Binding BackupCommand}" Margin="8 0 0 0" />
                <TextBlock Text="{Binding CopyMessage}" DockPanel.Dock="Right" VerticalAlignment="Center"
                           Foreground="Green" Margin="8 0 0 0" />
                <TextBox Text="{Binding GnuCashFile}" IsEnabled="False" />
            </DockPanel>
        </Border>

        <!-- Sidebar + content area -->
        <Grid Grid.Row="1" ColumnDefinitions="180,*">

            <!-- Sidebar nav -->
            <ListBox Grid.Column="0"
                     ItemsSource="{Binding NavItems}"
                     SelectedItem="{Binding SelectedNavItem}"
                     BorderThickness="0 0 1 0"
                     BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="home:NavItem">
                        <TextBlock Text="{Binding Label}" Padding="12 6" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.Styles>
                    <Style Selector="ListBoxItem">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Cursor" Value="Hand" />
                    </Style>
                </ListBox.Styles>
            </ListBox>

            <!-- Main content area -->
            <ContentControl Grid.Column="1" x:Name="ContentArea" />

        </Grid>
    </Grid>

</Window>