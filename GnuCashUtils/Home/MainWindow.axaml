<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:home="clr-namespace:GnuCashUtils.Home"
        xmlns:local="clr-namespace:GnuCashUtils"
        xmlns:controls="clr-namespace:GnuCashUtils.Controls"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="700"
        x:Class="GnuCashUtils.Home.MainWindow"
        x:DataType="home:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="GnuCashUtils">

    <Design.DataContext>
        <home:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">

        <!-- Top bar: file picker + backup -->
        <Border Grid.Row="0"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Padding="8">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                <TextBox
                    Grid.Column="0"
                    Text="{Binding GnuCashFile}"
                    IsEnabled="False" />
                <TextBlock
                    Grid.Column="1"
                    Text="{Binding CopyMessage}"
                    VerticalAlignment="Center"
                    Foreground="Green"
                    Margin="8 0 0 0" />
                <controls:IconButton
                    Grid.Column="2"
                    Margin="8 0 0 0"
                    LeadingIcon="{x:Static local:FontAwesomeIcons.FloppyDisk}"
                    Text="Backup"
                    Command="{Binding BackupCommand}" />
                <controls:IconButton
                    Grid.Column="3"
                    Margin="8 0 0 0"
                    LeadingIcon="{x:Static local:FontAwesomeIcons.FolderOpen}"
                    Text="Open"
                    Click="SaveButton_Click" />
            </Grid>
        </Border>

        <!-- Sidebar + content area -->
        <Grid Grid.Row="1" ColumnDefinitions="180,*">

            <!-- Sidebar nav -->
            <ListBox Grid.Column="0"
                     ItemsSource="{Binding NavItems}"
                     SelectedItem="{Binding SelectedNavItem}"
                     BorderThickness="0 0 1 0"
                     BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="home:NavItem">
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="12 6">
                            <TextBlock FontFamily="{StaticResource FontAwesomeIcons}" FontWeight="Black"
                                       Text="{Binding Icon}" VerticalAlignment="Center" Width="16"
                                       TextAlignment="Center" />
                            <TextBlock Text="{Binding Label}" VerticalAlignment="Center" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.Styles>
                    <Style Selector="ListBoxItem">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Cursor" Value="Hand" />
                    </Style>
                </ListBox.Styles>
            </ListBox>

            <!-- Main content area -->
            <ContentControl Grid.Column="1" x:Name="ContentArea" />

        </Grid>
    </Grid>

</Window>