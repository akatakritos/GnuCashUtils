<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:categorization="clr-namespace:GnuCashUtils.Categorization"
        xmlns:controls="clr-namespace:GnuCashUtils.Core.Controls"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="GnuCashUtils.Categorization.CategorizationWindow"
        x:DataType="categorization:CategorizationWindowViewModel"
        Title="Categorization">

    <DockPanel Margin="8">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 8">
            <Button Content="Open CSV" Click="OpenCsvButton_Click" Margin="0 0 8 0" />
            <TextBlock Text="{Binding CsvFilePath}" VerticalAlignment="Center" />
        </StackPanel>

        <DataGrid x:Name="CsvDataGrid"
                  ItemsSource="{Binding Rows}"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  FontSize="12">
            <DataGrid.Columns>

                <DataGridTextColumn Header="Date"
                                    Binding="{Binding Date}"
                                    IsReadOnly="True"
                                    Width="100" />

                <DataGridTextColumn Header="Description"
                                    Binding="{Binding Description}"
                                    Width="280" />

                <DataGridTextColumn Header="Amount"
                                    Binding="{Binding Amount}"
                                    IsReadOnly="True"
                                    Width="100" />

                <DataGridTextColumn Header="Merchant"
                                    Binding="{Binding Merchant}"
                                    Width="160" />

                <DataGridTemplateColumn Header="Account" Width="240">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="categorization:CategorizationRowViewModel">
                            <TextBlock Text="{Binding SelectedAccount.Name}"
                                       VerticalAlignment="Center"
                                       FontSize="12"
                                       Margin="4 0" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate x:DataType="categorization:CategorizationRowViewModel">
                            <controls:AccountComboBox ItemsSource="{Binding Accounts}"
                                                      SelectedItem="{Binding SelectedAccount}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" FontSize="12"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </controls:AccountComboBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>

</Window>
