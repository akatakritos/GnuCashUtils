<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:categorization="clr-namespace:GnuCashUtils.Categorization"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="GnuCashUtils.Categorization.CategorizationWindow"
        x:DataType="categorization:CategorizationWindowViewModel"
        Title="Categorization">
    <Design.DataContext>    
        <categorization:CategorizationWindowViewModel/>
    </Design.DataContext>

    <DockPanel Margin="8">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 8" Spacing="8">
            <Button Content="Open CSV" Click="OpenCsvButton_Click" />
            <TextBlock Text="{Binding CsvFilePath}" VerticalAlignment="Center" />
            <CheckBox Content="Show only errors"
                      IsChecked="{Binding ShowOnlyErrors}"
                      VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Spacing="8">
            <ProgressBar Minimum="0" Maximum="1" IsVisible="{Binding IsBuildingClassifier}" Value="{Binding BuildingProgress}" />
            <TextBlock IsVisible="{Binding !IsBuildingClassifier}" Text="{Binding InvalidCount, StringFormat='{}{0} transactions to categorize'}" VerticalAlignment="Center" />
            <Button IsVisible="{Binding !IsBuildingClassifier}" Content="Save" Command="{Binding SaveCommand}" />
            <TextBlock IsVisible="{Binding !IsBuildingClassifier}" Text="{Binding StatusMessage}" VerticalAlignment="Center" />
        </StackPanel>

        <DataGrid x:Name="CsvDataGrid"
                  ItemsSource="{Binding Rows}"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  FontSize="11"
                  RowHeight="22">
            <DataGrid.Styles>
                <Style Selector="DataGridCell">
                    <Setter Property="Padding" Value="4 1" />
                    <Setter Property="FontSize" Value="11" />
                    <Setter Property="MinHeight" Value="0" />
                </Style>
                <Style Selector="DataGridCell" x:DataType="categorization:CategorizationRowViewModel">
                    <Setter Property="Background" Value="{Binding IsValid, Converter={x:Static categorization:ValidToRowBrushConverter.Instance}}" />
                </Style>
            </DataGrid.Styles>
            <DataGrid.Columns>

                <DataGridTextColumn Header=""
                                    Binding="{Binding StatusIcon}"
                                    IsReadOnly="True"
                                    Width="36" />

                <DataGridTextColumn Header="Date"
                                    Binding="{Binding Date, StringFormat='{}{0:yyyy-MM-dd}'}"
                                    IsReadOnly="True"
                                    Width="90" />

                <DataGridTextColumn Header="Description"
                                    Binding="{Binding Description}"
                                    Width="*" />

                <DataGridTemplateColumn Header="Amount" Width="100" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="categorization:CategorizationRowViewModel">
                            <TextBlock Text="{Binding Amount, StringFormat='{}{0:N2}'}"
                                       TextAlignment="Right"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Account" Width="240">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="categorization:CategorizationRowViewModel">
                            <TextBlock Text="{Binding SelectedAccount.Name}"
                                       VerticalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate x:CompileBindings="False">
                            <AutoCompleteBox
                                ItemsSource="{Binding DataContext.Accounts, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                SelectedItem="{Binding SelectedAccount}"
                                FilterMode="ContainsOrdinal"
                                ValueMemberBinding="{Binding FullName}">
                                <AutoCompleteBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FullName}" />
                                    </DataTemplate>
                                </AutoCompleteBox.ItemTemplate>
                            </AutoCompleteBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Confidence" Width="130" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="categorization:CategorizationRowViewModel">
                            <Border Background="{Binding Confidence, Converter={x:Static categorization:ConfidenceToColorConverter.Instance}}"
                                    Padding="4 2"
                                    ToolTip.Tip="{Binding IgnoredLabel}">
                                <TextBlock Text="{Binding Confidence, StringFormat='{}{0:P0}'}"
                                           TextAlignment="Right"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center" />
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>

</Window>
